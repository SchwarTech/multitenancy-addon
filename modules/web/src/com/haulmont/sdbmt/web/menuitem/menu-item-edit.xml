<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.sdbmt.web.menuitem.MenuItemEdit"
        datasource="menuItemDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.sdbmt.web.menuitem">
    <dsContext>
        <datasource id="menuItemDs"
                    class="com.haulmont.sdbmt.entity.MenuItem"
                    view="menuItem-edit"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="menuItemDs">
            <column width="250px">
                <field id="name"/>
                <field id="price"/>
                <field id="hot"/>
                <field id="photo"/>
                <field id="tenantId"/>
            </column>
        </fieldGroup>
        <groupBox caption="Embedded image file"
                  height="250px"
                  width="250px">
            <embedded id="image"
                      align="MIDDLE_CENTER"/>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
