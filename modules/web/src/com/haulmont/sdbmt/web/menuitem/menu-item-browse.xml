<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.sdbmt.web.menuitem.MenuItemBrowse"
        focusComponent="menuItemsTable"
        lookupComponent="menuItemsTable"
        messagesPack="com.haulmont.sdbmt.web.menuitem">
    <dsContext>
        <collectionDatasource id="menuItemsDs"
                              class="com.haulmont.sdbmt.entity.MenuItem"
                              view="menuItem-browse">
            <query>
                <![CDATA[select e from sdbmt$MenuItem e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="menuItemsTable"
            spacing="true">
        <filter id="filter"
                applyTo="menuItemsTable"
                datasource="menuItemsDs">
            <properties include=".*"/>
        </filter>
        <table id="menuItemsTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="price"/>
                <column id="hot"/>
                <column id="tenantId"/>
            </columns>
            <rows datasource="menuItemsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="menuItemsTable.create"/>
                <button id="editBtn"
                        action="menuItemsTable.edit"/>
                <button id="removeBtn"
                        action="menuItemsTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
