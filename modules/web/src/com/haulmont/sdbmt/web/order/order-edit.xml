<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.sdbmt.web.order.OrderEdit"
        datasource="orderDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.sdbmt.web.order">
    <dsContext>
        <datasource id="orderDs"
                    class="com.haulmont.sdbmt.entity.Order"
                    view="order-edit-view">
            <collectionDatasource id="itemsDs"
                                  property="items"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="orderDs">
            <column width="250px">
                <field id="dateTime"/>
                <field id="total"/>
                <field id="tenantId"/>
            </column>
        </fieldGroup>
        <groupBox id="itemsBox"
                  caption="msg://com.haulmont.sdbmt.entity/Order.items">
            <table id="itemsTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="menuItem"/>
                    <column id="quantity"/>
                    <column id="comments"/>
                </columns>
                <rows datasource="itemsDs"/>
                <buttonsPanel>
                    <button action="itemsTable.create"/>
                    <button action="itemsTable.edit"/>
                    <button action="itemsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
