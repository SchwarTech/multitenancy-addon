<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.sdbmt.web.orderitem.OrderItemEdit"
        datasource="orderItemDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.sdbmt.web.orderitem">
    <dsContext>
        <datasource id="orderItemDs"
                    class="com.haulmont.sdbmt.entity.OrderItem"
                    view="orderItem-edit-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="orderItemDs">
            <column width="250px">
                <field id="menuItem"/>
                <field id="quantity"/>
                <field id="comments"/>
                <field id="tenantId"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
